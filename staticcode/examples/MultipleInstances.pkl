/// An example showing multiple instances of the same type, some of which are nested.
module MultipleInstances

import "../StaticCode.pkl"

phone: Device = new { name = "iPhone" }
tablet: Device = new { name = "iPad" }
laptop: Device = new { name = "MacBook" }
desktop: Device = new { name = "iMac" }

cover: Cover = new {
  name = "Magic Keyboard"
  device = new { name = "iPad" }
}

local class Device {
  name: String
}

local class Cover {
  name: String
  device: Device
}

output {
  renderer = new StaticCode.Renderer {
    language = "Swift"
    objectName = "Equipment"
  }
}