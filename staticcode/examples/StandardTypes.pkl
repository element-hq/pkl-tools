/// An example that shows the rendering of standard language types.
module SampleConfiguration

import "../StaticCode.pkl"

someString = "Hello, World!"
someOptionalString: String? = null

someObject = new SomeClass {
  someString = "bob"
  someInteger = 0
  anEmptyStringList = new Listing<String> {}
  anIntList = new Listing {
    1
    2
    3
  }
  aStringList = new Listing {
    "A"
    "B"
    "C"
  }
  someNestedObject = new SomeOtherClass {
    someBoolean = false
    someDecimal = 0.5
  }
}

local class SomeClass {
  someString: String
  someInteger: Int
  anEmptyStringList: Listing<String>
  anIntList: Listing<Int>
  aStringList: Listing<String>
  someNestedObject: SomeOtherClass
}

local class SomeOtherClass {
  someBoolean: Boolean
  someDecimal: Float
}

output {
  renderer = new StaticCode.Renderer {
    language = "Swift"
    objectName = "StandardTypes"
  }
}