/// An example that shows the rendering of nullable properties, both set and unset.
module NullableProperties

import "../StaticCode.pkl"

nullableString: String? = null

nullableObject: OuterClass? = new {
  required = new { value = true }
  requiredWithNull = new { }
}

nullObject: UnusedClass?

local class OuterClass {
  required: InnerClass
  requiredWithNull: NullableInnerClass
  nullObject: InnerClass?
}

local class InnerClass {
  value: Boolean
}

local class NullableInnerClass {
  value: Boolean?
}

local class UnusedClass {
  value: String
}

output {
  renderer = new StaticCode.Renderer {
    language = "Swift"
    objectName = "NullableProperties"
  }
}